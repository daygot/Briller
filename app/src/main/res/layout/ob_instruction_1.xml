<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_background">

    <ImageButton
        android:id="@+id/onboarding_instruction_back_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="130dp"

        android:src="@drawable/onboarding_instruction_back_button"
        android:background="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/onboarding_instruction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/onboarding_instruction_back_button"
        android:layout_alignTop="@id/onboarding_instruction_back_button"

        android:text="One step at a time"
        android:textSize="36sp"
        android:layout_toRightOf="@id/onboarding_instruction_back_button" />

    <TextView
        android:id="@+id/f1_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Growth happens with small, consistent habits. Let Ollie follow you along the way!"
        />

</RelativeLayout>
