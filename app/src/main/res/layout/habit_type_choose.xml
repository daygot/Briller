<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/habit_choose_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/app_background"
    tools:context=".main.ui.home.habit.HabitType"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/habit_choose_back_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:background="@drawable/app_back_button"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/habit_choose"
            android:textSize="@dimen/textview_big_0_size"
            />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/habit_choose_physique_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/item_habit"
        >

        <ImageButton
            android:id="@+id/habit_choose_physique"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="H,1:1"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/habit_physique_icon"
            android:background="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/habit_choose_physique"
            app:layout_constraintRight_toRightOf="@id/habit_choose_physique"
            android:layout_marginTop="10dp"
            android:text="@string/habit_physique"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/textview_middle_size"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/habit_choose_mind_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/item_habit"
        >

        <ImageButton
            android:id="@+id/habit_choose_mind"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="H,1:1"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/habit_mind_icon"
            android:background="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/habit_choose_mind"
            app:layout_constraintRight_toRightOf="@id/habit_choose_mind"
            android:layout_marginTop="10dp"
            android:text="@string/habit_mind"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/textview_middle_size"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
