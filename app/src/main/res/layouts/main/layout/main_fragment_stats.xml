<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".main.ui.stats.StatsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"

        android:text="@string/stats_fragment_title"
        android:textSize="@dimen/textview_big_0_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_gym_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_physique_gym"
                android:background="@null"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_physique_gym"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_run_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_physique_run"
                android:background="@null"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_physique_run"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_pushup_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_physique_pushup"
                android:background="@null"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_physique_pushup"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_squat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_physique_squat"
                android:background="@null"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_physique_squat"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_meditate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_mind_meditate"
                android:background="@null"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_mind_meditate"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_read_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_mind_read"
                android:background="@null"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_mind_read"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_journal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_mind_journal"
                android:background="@null"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_mind_journal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_study_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_mind_study"
                android:background="@null"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_mind_study"
                />
        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:background="@drawable/item_stats"
                android:text=" M " />

            <TextView android:text=" T "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:background="@drawable/item_stats"
                />

            <TextView android:text=" W "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:background="@drawable/item_stats"/>


            <TextView android:text=" R "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:background="@drawable/item_stats"/>

            <TextView android:text=" F "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:background="@drawable/item_stats"/>

            <TextView android:text=" S "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:background="@drawable/item_stats"/>

            <TextView android:text=" U "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="7"
                android:background="@drawable/item_stats" />

        </TableRow>

    </TableLayout>

</LinearLayout>