<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".main.ui.stats.StatsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"

        android:text="@string/stats_fragment_title"
        android:textSize="@dimen/textview_big_0_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_gym_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_physique_gym"
                android:tag="@string/habit_physique_gym"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_physique_gym"
                android:textSize="@dimen/textview_small_size"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_run_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_physique_run"
                android:tag="@string/habit_physique_run"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_physique_run"
                android:textSize="@dimen/textview_small_size"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_pushup_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_physique_pushup"
                android:tag="@string/habit_physique_pushup"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_physique_pushup"
                android:textSize="@dimen/textview_small_size"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_squat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_physique_squat"
                android:tag="@string/habit_physique_squat"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_physique_squat"
                android:textSize="@dimen/textview_small_size"
                android:maxLines="1"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_meditate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_mind_meditate"
                android:tag="@string/habit_mind_meditate"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_mind_meditate"
                android:textSize="@dimen/textview_small_size"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_read_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_mind_read"
                android:tag="@string/habit_mind_read"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_mind_read"
                android:textSize="@dimen/textview_small_size"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_journal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_mind_journal"
                android:tag="@string/habit_mind_journal"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_mind_journal"
                android:textSize="@dimen/textview_small_size"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_stats"
            >
            <ImageButton
                android:id="@+id/stats_study_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/habit_mind_study"
                android:tag="@string/habit_mind_study"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit_mind_study"
                android:textSize="@dimen/textview_small_size"
                android:maxLines="1"
                />
        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView android:text="1"
                android:id="@+id/stampcard_day0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/item_stats" />

            <TextView android:text="2"
                android:id="@+id/stampcard_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/item_stats" />

            <TextView android:text="3"
                android:id="@+id/stampcard_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/item_stats" />

            <TextView android:text="4"
                android:id="@+id/stampcard_day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/item_stats" />

            <TextView android:text="5"
                android:id="@+id/stampcard_day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/item_stats" />

            <TextView android:text="6"
                android:id="@+id/stampcard_day5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/item_stats" />

            <TextView android:text="7"
                android:id="@+id/stampcard_day6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_stats" />

        </TableRow>

    </TableLayout>

</LinearLayout>