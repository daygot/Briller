<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context=".onboarding.OnboardingSelectPartnerScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:background="@drawable/app_back_button"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/onboarding_select_partner_screen_title"
            android:textSize="@dimen/textview_middle_size"
            />

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        >

        <TableRow
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_habit"
                android:layout_marginRight="20dp"

                android:visibility="invisible">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="120dp"
                    android:maxWidth="120dp"

                    android:src="@drawable/habit_mind_meditate"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/habit_mind_meditate"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/textview_middle_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_habit">
                <ImageButton
                    android:id="@+id/onboarding_dog_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="120dp"
                    android:maxWidth="120dp"

                    android:src="@drawable/onboarding_dog"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/dog_name"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/textview_middle_size"/>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_habit"
                android:layout_marginRight="20dp">
                <ImageButton
                    android:id="@+id/onboarding_cat_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="120dp"

                    android:src="@drawable/onboarding_cat"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/cat_name"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/textview_middle_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_habit"

                android:visibility="invisible">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="120dp"
                    android:maxHeight="120dp"

                    android:src="@drawable/habit_mind_study"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/habit_mind_study"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/textview_middle_size"/>
            </LinearLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>