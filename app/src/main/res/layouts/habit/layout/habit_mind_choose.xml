<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/app_background"
    tools:context=".main.ui.home.habit.HabitMind"

    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:background="@drawable/app_back_button"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/habit_choose_mind_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/habit_mind"
            android:textSize="@dimen/textview_big_1_size"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/habit_mind_icon" />

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        >

        <TableRow
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_habit"
                android:layout_marginRight="20dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="120dp"
                    android:maxWidth="120dp"

                    android:src="@drawable/habit_mind_meditate"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/habit_mind_meditate"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/textview_middle_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_habit">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="120dp"
                    android:maxWidth="120dp"

                    android:src="@drawable/habit_mind_read"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/habit_mind_read"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/textview_middle_size"/>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_habit"
                android:layout_marginRight="20dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="120dp"

                    android:src="@drawable/habit_mind_journal"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/habit_mind_journal"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/textview_middle_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_habit">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="120dp"
                    android:maxHeight="120dp"

                    android:src="@drawable/habit_mind_study"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/habit_mind_study"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/textview_middle_size"/>
            </LinearLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>
